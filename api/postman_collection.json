{
  "info": {
    "name": "Ecommerce API Prisma JS",
    "_postman_id": "e1d9a4a9-0000-0000-0000-000000000001",
    "description": "Coleção de endpoints para testes",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/health"
      }
    },
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\": \"Cliente\", \"email\": \"cliente@example.com\", \"password\": \"123456\", \"role\": \"CLIENT\"}"
        },
        "url": "{{baseUrl}}/auth/register"
      }
    },
    {
      "name": "Auth - Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var data = pm.response.json();",
              "if (data && data.token) { pm.environment.set('token', data.token); }"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"cliente@example.com\", \"password\": \"123456\"}"
        },
        "url": "{{baseUrl}}/auth/login"
      }
    },
    {
      "name": "Users - Me",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "{{baseUrl}}/users/me"
      }
    },
    {
      "name": "Products - List",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/products"
      }
    },
    {
      "name": "Products - Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "title",
              "value": "W59 Mini"
            },
            {
              "key": "description",
              "value": "Smartwatch compacto."
            },
            {
              "key": "price",
              "value": "199.90"
            },
            {
              "key": "stock",
              "value": "20"
            },
            {
              "key": "image",
              "type": "file",
              "src": []
            }
          ]
        },
        "url": "{{baseUrl}}/products"
      }
    },
    {
      "name": "Orders - Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"items\": [{\"productId\": 1, \"quantity\": 1}], \"shippingAddress\": \"Rua Exemplo, 123 - Barreira/CE\", \"payment\": {\"holderName\": \"Fulano\", \"cardNumber\": \"4111111111111111\", \"expMonth\": 12, \"expYear\": 2030, \"cvv\": \"123\"}}"
        },
        "url": "{{baseUrl}}/orders"
      }
    }
  ],
  "event": [],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
